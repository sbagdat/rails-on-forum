<% content_for(:content) do %>
<div class="row">
  <div class="large-12 columns">
    <div class="large-2 columns">
      <%= image_tag @user.avatar_url, class: 'profile-image round' %>
    </div>

    <div class="large-10 columns">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <div class="button-bar">
        <ul class="button-group radius">
          <li><%= link_to "Konular", profile_path(@user, sayfa: 'konular'),
                                     class: 'small button secondary' %></li>
          <li><%= link_to "Yorumlar", profile_path(@user, sayfa: 'yorumlar'),
                                      class: 'small button secondary' %></li>
          <% if current_user == @user %>
            <li><%= link_to "Profilimi düzenle", edit_profile_path(@user),
                                                 class: 'small button secondary' %></li>
            <li><%= link_to "Hesabımı sil.", @user,
                                             method: :delete,
                                             data: {confirm: 'Hesabınızı silmek istediğinize emin misiniz?'},
                                             class: 'small button alert' %></li>
          <% end %>
        </ul>
      </div>
    </div><hr>

    <div class="large-12 columns">
      <%= yield :profile_content %>
    </div>

  </div>
</div>
<% end %>
<%= render template: "layouts/application" %>
